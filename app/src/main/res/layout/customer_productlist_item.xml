<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="@dimen/_2sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <!--        android:background="#B3f2f2f2"-->

        <RelativeLayout
            android:id="@+id/rlcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/imgcard"
            android:background="@color/white">


            <TextView
                android:id="@+id/symbolNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:maxLines="2"
                android:textAllCaps="true"
                android:padding="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/categoryRl"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/symbolNameTxt">

                <TextView
                    android:id="@+id/bidPriceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/purple_700"
                    android:textSize="16dp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/descTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryRl"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/raleway_semibold"
                android:maxLines="2"
                android:visibility="gone"
                android:textColor="@color/text_grey"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/qtyll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descTxt"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/PriceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
